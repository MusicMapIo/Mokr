#! /usr/bin/env node

var app = require('commander');
var fs = require('fs');
var Logger = require('../lib/logger');
var paths = require('../lib/paths');
var State = require('../lib/state');
var saveState = require('../lib/save-state');
var readFixtures = require('../lib/read-fixtures');

app.option('-d --debug', 'Set the log level to debug');
app.option('-c --chdir <dir>', 'Change the current working directory');
app.parse(process.argv);

// Set the root dir
if (app.chdir) {
	process.chdir(app.chdir);
}

// Setup logger
var logger = Logger(app);
var cwd = process.cwd();
logger.debug('cwd: ' + cwd);

var mokrPaths = paths(cwd);

logger.debug('state file: ' + mokrPaths.stateFile);

fs.unlink(mokrPaths.stateFile, function (err) {
	if (err) {
		return logger.error(err);
	}

	var state = new State();
	readFixtures(state, function (err) {
		if (err) {
			return logger.error(err);
		}

		saveState(state, mokrPaths.stateFile, function (err) {
			if (err) {
				return logger.error(err);
			}
			logger.notice('Mokr status has been cleaned');
		});
	});
});
